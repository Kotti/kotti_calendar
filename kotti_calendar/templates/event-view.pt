<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" class="event-view content"
           i18n:domain="kotti_calendar">
    <h1>${context.title}</h1>
    <div class="row">
      <div class="span9">
        <p class="description">
          ${context.description}
        </p>
        <div class="body" tal:content="structure context.body"></div>
      </div>
      <div class="span3">
        <ul class="nav nav-list"
            tal:define="format context.all_day and
                        api.format_date or api.format_datetime">
          <li class="nav-header" i18n:translate="event_start">Start</li>
          <li>${format(context.start)}</li>

          <li class="nav-header" tal:condition="api.context.end"
              i18n:translate="event_end">End</li>
          <li tal:condition="api.context.end">${format(context.end)}</li>

          <li class="nav-header" tal:condition="context.all_day"
              i18n:translate="All day">All Day</li>

          <li class="nav-header" tal:condition="files" i18n:translate="Downloads">Downloads</li>
          <li tal:repeat="file files">
            <a href="${request.resource_url(file)}/@@attachment-view">
              ${file.title}
            </a>
          </li>
        </ul>
      </div>
    </div>
  </article>

</html>
